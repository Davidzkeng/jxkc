generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 商品类别模型
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  products    Product[]
}

// 商品模型
model Product {
  id               Int              @id @default(autoincrement())
  name             String
  code             String           @unique
  categoryId       Int
  category         Category         @relation(fields: [categoryId], references: [id])
  supplierId       Int?
  supplier         Supplier?        @relation(fields: [supplierId], references: [id])
  price            Decimal          @default(0.00)
  stock            Float            @default(0)
  description      String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  inRecords        InRecord[]
  outRecords       OutRecord[]
  inventoryChecks  InventoryCheck[]
  salesOrderProducts SalesOrderProduct[]
  productUnits     ProductUnit[]
}

// 商品单位模型
model ProductUnit {
  id              Int       @id @default(autoincrement())
  productId       Int
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  unitName        String    // 单位名称（斤、件、箱、盒等）
  conversionRate  Float     @default(1)  // 转换系数（相对于基本单位）
  price           Decimal   @default(0.00)  // 该单位下的单价
  isDefault       Boolean   @default(false)  // 是否默认单位
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  salesOrderProducts SalesOrderProduct[]  // 关联销售单商品
  
  @@unique([productId, unitName])
}

// 客户模型
model Customer {
  id          Int      @id @default(autoincrement())
  name        String
  contact     String
  phone       String
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  outRecords  OutRecord[]
  salesOrders SalesOrder[]
}

// 供应商模型
model Supplier {
  id          Int      @id @default(autoincrement())
  name        String
  contact     String
  phone       String
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  inRecords   InRecord[]
  products    Product[]
}

// 入库单模型
model InRecord {
  id          Int      @id @default(autoincrement())
  productId   Int
  product     Product  @relation(fields: [productId], references: [id])
  supplierId  Int
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  quantity    Int
  price       Decimal
  totalAmount Decimal  @default(0.00)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 出库单模型
model OutRecord {
  id          Int       @id @default(autoincrement())
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])
  customerId  Int?
  customer    Customer? @relation(fields: [customerId], references: [id])
  quantity    Int
  price       Decimal   @default(0)
  totalAmount Decimal   @default(0)
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// 库存盘点模型
model InventoryCheck {
  id          Int      @id @default(autoincrement())
  productId   Int
  product     Product  @relation(fields: [productId], references: [id])
  actualStock Int
  difference  Int
  notes       String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 销售单模型
model SalesOrder {
  id          Int      @id @default(autoincrement())
  orderNumber String   @unique
  customerId  Int
  customer    Customer @relation(fields: [customerId], references: [id])
  totalAmount Decimal  @default(0.00)
  status      String   @default("已完成")
  remark      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  products    SalesOrderProduct[]
  printJobs   PrintJob[]
}

// 销售单商品关联模型
model SalesOrderProduct {
  id            Int        @id @default(autoincrement())
  salesOrderId   Int
  salesOrder    SalesOrder  @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  productId     Int
  product       Product    @relation(fields: [productId], references: [id])
  productUnitId Int?       // 可选，关联商品单位
  productUnit   ProductUnit? @relation(fields: [productUnitId], references: [id])
  quantity      Int        // 销售数量
  baseQuantity  Float      @default(0) // 基本单位数量（转换后）
  price         Decimal    @default(0) // 单价
  totalAmount   Decimal    @default(0.00) // 小计金额
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([salesOrderId, productId])
}

// 系统设置模型
model SystemSetting {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 打印任务模型
model PrintJob {
  id            Int      @id @default(autoincrement())
  orderId       Int
  order         SalesOrder @relation(fields: [orderId], references: [id])
  status        String   @default("pending") // pending, processing, completed, failed
  printerName   String?
  errorMessage  String?
  printedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status, createdAt])
}
