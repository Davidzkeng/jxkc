.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 搜索选择组件样式 */
.search-picker-container {
  position: relative;
}

.search-input-wrapper {
  margin-bottom: 16rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 80rpx 0 20rpx;
  box-sizing: border-box;
}

.refresh-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 72rpx;
  width: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e6f7ff;
  border-radius: 0 8rpx 8rpx 0;
}

.refresh-btn:active {
  background: #bae7ff;
}

.refresh-icon {
  font-size: 32rpx;
}

.quick-add-btn {
  margin-top: 16rpx;
  padding: 16rpx 32rpx;
  background: #f6ffed;
  border: 2rpx dashed #52c41a;
  border-radius: 8rpx;
  text-align: center;
}

.quick-add-btn:active {
  background: #d9f7be;
}

.quick-add-text {
  font-size: 28rpx;
  color: #52c41a;
  font-weight: 500;
}

.selected-item {
  position: relative;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  cursor: pointer;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-item.placeholder {
  color: #999;
}

.clear-btn {
  font-size: 32rpx;
  color: #999;
  cursor: pointer;
}

.clear-btn:active {
  color: #666;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  margin-top: 8rpx;
}

.result-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f5f5;
}

.result-item.empty {
  text-align: center;
  color: #999;
  cursor: default;
}

.result-item.empty:active {
  background: #fff;
}

.result-name {
  display: block;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.result-code,
.result-contact {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 已选商品样式 */
.selected-products {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx;
}

.selected-product-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.selected-product-item:last-child {
  margin-bottom: 0;
}

/* 商品头部信息 */
.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.product-code {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.product-subtotal {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.subtotal-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 商品操作区域 */
.product-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 单位价格行 */
.unit-price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.unit-text {
  font-size: 26rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.unit-picker {
  flex: 1;
}

.picker {
  font-size: 26rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.price-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 16rpx;
  height: 56rpx;
}

.price-symbol {
  font-size: 26rpx;
  color: #666;
  margin-right: 4rpx;
}

.price-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 100%;
  line-height: 56rpx;
}

/* 数量行 */
.quantity-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.quantity-label {
  font-size: 26rpx;
  color: #666;
}

.quantity-controls {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 64rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  background: #e0e0e0;
}

.quantity-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}

.quantity-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
}

.quantity-btn:active {
  background: #d0d0d0;
}

.quantity-input {
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  background: transparent;
}

.remove-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 4rpx 8rpx;
}

.remove-btn:active {
  color: #d9363e;
}

/* 总金额样式 */
.total-amount {
  background: #fff7e6;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
}

.amount-value {
  font-size: 48rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 备注样式 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

/* 按钮组样式 */
.btn-group {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.save-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #1890ff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #1890ff;
}

.save-btn:active {
  background: #e6f7ff;
}

.save-btn[disabled] {
  background: #f5f5f5;
  color: #d9d9d9;
  border-color: #d9d9d9;
}

.submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
}

.submit-btn:active {
  background: #096dd9;
}

.submit-btn[disabled] {
  background: #d9d9d9;
  color: #fff;
}