.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

.form {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 搜索选择组件样式 */
.search-picker-container {
  position: relative;
}

.search-input-wrapper {
  margin-bottom: 16rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.selected-item {
  position: relative;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  cursor: pointer;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-item.placeholder {
  color: #999;
}

.clear-btn {
  font-size: 32rpx;
  color: #999;
  cursor: pointer;
}

.clear-btn:active {
  color: #666;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  margin-top: 8rpx;
}

.result-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f5f5;
}

.result-item.empty {
  text-align: center;
  color: #999;
  cursor: default;
}

.result-item.empty:active {
  background: #fff;
}

.result-name {
  display: block;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.result-code,
.result-contact {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 已选商品样式 */
.selected-products {
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 16rpx;
}

.selected-product-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.selected-product-item:last-child {
  margin-bottom: 0;
}

.product-info {
  margin-bottom: 16rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.product-code {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.product-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.quantity-input {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.remove-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  cursor: pointer;
}

.remove-btn:active {
  color: #d9363e;
}

/* 总金额样式 */
.total-amount {
  background: #fff7e6;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
}

.amount-value {
  font-size: 48rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 备注样式 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  margin-top: 32rpx;
}

.submit-btn:active {
  background: #096dd9;
}

.submit-btn[disabled] {
  background: #d9d9d9;
  color: #fff;
}