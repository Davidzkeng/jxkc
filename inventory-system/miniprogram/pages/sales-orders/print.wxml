<view class="print-container">
  <!-- 打印抬头 -->
  <view class="print-header">
    <text class="company-name">利发副食</text>
    <text class="company-info">销售单</text>
    <text class="company-contact">联系方式: 15820159623</text>
  </view>

  <!-- 销售单基本信息 -->
  <view class="order-info">
    <view class="info-row">
      <text class="info-label">销售单号:</text>
      <text class="info-value">{{order.orderNumber}}</text>
    </view>
    <view class="info-row">
      <text class="info-label">日期:</text>
      <text class="info-value">{{order.createdAt}}</text>
    </view>
    <view class="info-row">
      <text class="info-label">客户:</text>
      <text class="info-value">{{order.customerName}}</text>
    </view>
    <view class="info-row">
      <text class="info-label">状态:</text>
      <text class="info-value status">{{order.status}}</text>
    </view>
  </view>

  <!-- 商品明细表格 -->
  <view class="products-table">
    <view class="table-header">
      <view class="table-cell index">序号</view>
      <view class="table-cell name">商品名称</view>
      <view class="table-cell code">编码</view>
      <view class="table-cell quantity">数量</view>
      <view class="table-cell price">单价</view>
      <view class="table-cell total">小计</view>
    </view>
    <view class="table-body">
      <view class="table-row" wx:for="{{order.products}}" wx:key="id">
        <view class="table-cell index">{{index + 1}}</view>
        <view class="table-cell name">{{item.name}}</view>
        <view class="table-cell code">{{item.code}}</view>
        <view class="table-cell quantity">{{item.quantity}}</view>
        <view class="table-cell price">¥{{item.price}}</view>
        <view class="table-cell total">¥{{item.totalAmount}}</view>
      </view>
    </view>
  </view>

  <!-- 总计信息 -->
  <view class="summary">
    <view class="summary-row">
      <text class="summary-label">商品数量:</text>
      <text class="summary-value">{{order.productCount}}</text>
    </view>
    <view class="summary-row total-row">
      <text class="summary-label">总金额:</text>
      <text class="summary-value total-amount">¥{{order.totalAmount}}</text>
    </view>
  </view>

  <!-- 备注 -->
  <view class="remark" wx:if="{{order.remark}}">
    <text class="remark-label">备注:</text>
    <text class="remark-content">{{order.remark}}</text>
  </view>

  <!-- 打印按钮 -->
  <view class="actions">
    <button class="action-btn print-btn" bindtap="print">
      <text class="btn-text">打印</text>
    </button>
    <button class="action-btn back-btn" bindtap="goBack">
      <text class="btn-text">返回</text>
    </button>
  </view>
</view>