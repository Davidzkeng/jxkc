.print-container {
  padding: 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 1.4;
  font-family: "SimSun", "宋体", serif;
  box-sizing: border-box;
  width: 100%;
}

/* 销售单标题 */
.print-title {
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  letter-spacing: 30rpx;
}

/* 表头信息 */
.header-info {
  margin-bottom: 20rpx;
}

.header-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.header-item {
  display: flex;
  align-items: center;
  flex: 1;
}

.header-item.right {
  justify-content: flex-start;
  padding-left: 40rpx;
}

.header-item .label {
  font-weight: normal;
  margin-right: 10rpx;
  white-space: nowrap;
  font-size: 28rpx;
}

.header-item .value {
  flex: 1;
  border-bottom: 1rpx solid #000;
  padding-bottom: 2rpx;
  min-width: 250rpx;
  font-size: 28rpx;
}

/* 商品明细表格 */
.products-table {
  border: 2rpx solid #000;
  margin-bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.table-header {
  display: flex;
  border-bottom: 2rpx solid #000;
  background-color: #fff;
  width: 100%;
}

.th {
  padding: 15rpx 5rpx;
  text-align: center;
  font-weight: normal;
  border-right: 1rpx solid #000;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.th:last-child {
  border-right: none;
}

/* 表格列宽 - 删除规格列后重新分配 */
.th-index { width: 14%; }
.th-name { width: 28%; }
.th-qty { width: 12%; }
.th-unit { width: 10%; }
.th-price { width: 16%; }
.th-amount { width: 16%; }
.th-remark { width: 4%; }

.table-body {
  min-height: 480rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #000;
  min-height: 60rpx;
  width: 100%;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row.empty-row {
  border-bottom: 1rpx solid #ccc;
}

.td {
  padding: 12rpx 5rpx;
  text-align: center;
  border-right: 1rpx solid #000;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  word-break: break-all;
  overflow: hidden;
}

.td:last-child {
  border-right: none;
}

.td-index { 
  width: 14%; 
}
.td-name { 
  width: 28%; 
  text-align: left;
  justify-content: flex-start;
  padding-left: 10rpx;
}
.td-qty { 
  width: 12%; 
}
.td-unit { 
  width: 10%; 
}
.td-price { 
  width: 16%; 
}
.td-amount { 
  width: 16%; 
}
.td-remark { 
  width: 4%; 
}

/* 汇总信息 */
.summary-section {
  border: 2rpx solid #000;
  border-top: none;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.summary-row {
  display: flex;
  border-bottom: 1rpx solid #000;
  min-height: 70rpx;
}

.summary-row:last-child {
  border-bottom: none;
}

.summary-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  flex: 1;
  font-size: 28rpx;
}

.summary-item:first-child {
  border-right: 1rpx solid #000;
}

.summary-item .label {
  margin-right: 10rpx;
  white-space: nowrap;
}

.summary-item .value {
  flex: 1;
}

.summary-item .value.amount {
  font-weight: bold;
  font-size: 32rpx;
}

/* 底部说明 */
.footer-note {
  margin-top: 25rpx;
  padding: 10rpx 0;
}

.note-text {
  font-size: 24rpx;
  color: #333;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
  gap: 40rpx;
}

.action-btn {
  width: 220rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  border-radius: 8rpx;
  margin: 0;
}

.print-btn {
  background-color: #007bff;
  color: #fff;
}

.back-btn {
  background-color: #6c757d;
  color: #fff;
}

/* 打印样式 */
@media print {
  .actions {
    display: none;
  }

  .print-container {
    padding: 20rpx;
  }
}
