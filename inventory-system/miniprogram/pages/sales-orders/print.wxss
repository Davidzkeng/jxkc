.print-container {
  padding: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 打印抬头 */
.print-header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #000;
}

.company-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 10rpx;
}

.company-info {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 10rpx;
}

.company-contact {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 订单基本信息 */
.order-info {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-weight: bold;
  color: #333;
}

.info-value {
  color: #666;
}

.status {
  color: #28a745;
}

/* 商品明细表格 */
.products-table {
  margin-bottom: 30rpx;
  border: 2rpx solid #000;
  border-radius: 10rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background-color: #f0f0f0;
  font-weight: bold;
  border-bottom: 2rpx solid #000;
}

.table-body {
  background-color: #fff;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #ddd;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  padding: 15rpx;
  text-align: center;
  word-break: break-all;
}

.index {
  width: 80rpx;
}

.name {
  flex: 2;
  text-align: left;
}

.code {
  flex: 1;
}

.quantity {
  width: 120rpx;
}

.price {
  width: 120rpx;
}

.total {
  width: 120rpx;
  font-weight: bold;
  color: #dc3545;
}

/* 总计信息 */
.summary {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-label {
  font-weight: bold;
  color: #333;
}

.summary-value {
  color: #666;
  font-weight: bold;
}

.total-row {
  border-top: 2rpx solid #000;
  padding-top: 10rpx;
  margin-top: 10rpx;
}

.total-amount {
  color: #dc3545;
  font-size: 36rpx;
}

/* 备注 */
.remark {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-left: 8rpx solid #6c757d;
  border-radius: 10rpx;
}

.remark-label {
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.remark-content {
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.action-btn {
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 40rpx;
  margin: 0 10rpx;
}

.print-btn {
  background-color: #007bff;
  color: #fff;
  border: none;
}

.back-btn {
  background-color: #6c757d;
  color: #fff;
  border: none;
}

/* 打印样式 */
@media print {
  .actions {
    display: none;
  }
  
  .print-container {
    padding: 0;
  }
  
  .order-info,
  .products-table,
  .summary,
  .remark {
    box-shadow: none;
    border: 1px solid #000;
  }
}