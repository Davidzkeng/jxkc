<view class="container">
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <view wx:else class="form">
    <view class="form-item">
      <text class="form-label">客户名称 *</text>
      <input class="form-input {{nameError ? 'error' : ''}}" value="{{name}}" bindinput="onNameChange" bindblur="onNameBlur" placeholder="请输入客户名称" />
      <text wx:if="{{nameError}}" class="error-text">{{nameError}}</text>
    </view>

    <view class="form-item">
      <text class="form-label">联系人 *</text>
      <input class="form-input" value="{{contact}}" bindinput="onContactChange" placeholder="请输入联系人" />
    </view>

    <view class="form-item">
      <text class="form-label">电话 *</text>
      <input class="form-input" type="number" value="{{phone}}" bindinput="onPhoneChange" placeholder="请输入电话" />
    </view>

    <view class="form-item">
      <text class="form-label">地址</text>
      <textarea class="form-textarea" value="{{address}}" bindinput="onAddressChange" placeholder="请输入地址" maxlength="200" />
    </view>

    <view class="form-actions">
      <button class="submit-btn" loading="{{submitLoading}}" bindtap="submit">保存</button>
    </view>
  </view>
</view>
