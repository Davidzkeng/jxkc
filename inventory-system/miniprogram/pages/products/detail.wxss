.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.detail {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.detail-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.product-code {
  font-size: 26rpx;
  color: #999;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.detail-item:first-child {
  padding-top: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.value.price {
  color: #1890ff;
  font-weight: 600;
}

.value.stock {
  color: #52c41a;
}

.value.stock.warning {
  color: #faad14;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.info-card {
  background: #fafafa;
}

.actions {
  padding: 0 24rpx;
  margin-top: 32rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
}
