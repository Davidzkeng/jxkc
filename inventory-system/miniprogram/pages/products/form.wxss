.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.form {
  padding: 24rpx;
}

.form-item {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input.error {
  border: 1rpx solid #ff4d4f;
  border-radius: 8rpx;
  padding: 0 16rpx;
}

.error-text {
  display: block;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.form-picker {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #ccc;
}

.form-actions {
  margin-top: 32rpx;
  padding: 0 24rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
}
