.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.form {
  padding: 24rpx;
}

.form-item {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.form-picker {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.arrow {
  color: #ccc;
}

.total-item {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

.total-item .form-label {
  color: #fff;
}

.total-amount {
  display: block;
  font-size: 48rpx;
  color: #fff;
  font-weight: 600;
  margin-top: 16rpx;
}

.form-actions {
  margin-top: 32rpx;
  padding: 0 24rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #52c41a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
}

/* 搜索选择组件样式 */
.search-picker-container {
  position: relative;
}

.search-input-wrapper {
  margin-bottom: 16rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.selected-item {
  position: relative;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  cursor: pointer;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-item.placeholder {
  color: #999;
}

.clear-btn {
  font-size: 32rpx;
  color: #999;
  cursor: pointer;
}

.clear-btn:active {
  color: #666;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  margin-top: 8rpx;
}

.result-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f5f5;
}

.result-item.empty {
  text-align: center;
  color: #999;
  cursor: default;
}

.result-item.empty:active {
  background: #fff;
}

.result-name {
  display: block;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.result-code,
.result-contact {
  display: block;
  font-size: 24rpx;
  color: #999;
}
