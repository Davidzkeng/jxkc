/* 全局样式 */
page {
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: #e2e8f0;
  min-height: 100vh;
}

/* 容器样式 */
.container {
  padding: 16rpx;
}

/* 卡片样式 */
.card {
  background: rgba(30, 30, 50, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e2e8f0;
  margin-bottom: 16rpx;
}

/* 统计卡片样式 */
.stat-card {
  background: rgba(30, 30, 50, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #6366f1;
  margin: 16rpx 0;
}

.stat-label {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-default {
  background: rgba(40, 40, 60, 0.8);
  color: #e2e8f0;
  border: 2rpx solid #2a2a4a;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 列表样式 */
.list-item {
  background: rgba(30, 30, 50, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e2e8f0;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #e2e8f0;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  background: rgba(40, 40, 60, 0.8);
  border: 2rpx solid #2a2a4a;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

.form-select {
  background: rgba(40, 40, 60, 0.8);
  border: 2rpx solid #2a2a4a;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 64rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 64rpx;
  color: #94a3b8;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.btn-edit {
  background: #52c41a;
  color: white;
}

.btn-delete {
  background: #ff4d4f;
  color: white;
}