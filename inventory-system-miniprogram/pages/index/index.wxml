<!-- 仪表盘页面 -->
<view class="container">
  <view class="page-header">
    <text class="page-title">仪表盘</text>
  </view>

  <!-- 统计卡片 -->
  <view class="stats-grid">
    <view class="stat-card">
      <text class="stat-label">商品总数</text>
      <text class="stat-value">{{stats.totalProducts}}</text>
    </view>
    <view class="stat-card">
      <text class="stat-label">库存总量</text>
      <text class="stat-value">{{stats.totalStock}}</text>
    </view>
    <view class="stat-card">
      <text class="stat-label">今日入库</text>
      <text class="stat-value" style="color: #52c41a;">{{stats.todayIn}}</text>
    </view>
    <view class="stat-card">
      <text class="stat-label">今日出库</text>
      <text class="stat-value" style="color: #ff4d4f;">{{stats.todayOut}}</text>
    </view>
  </view>

  <!-- 最近记录 -->
  <view class="card">
    <text class="title">最近出入库记录</text>
    <view class="records-list">
      <block wx:if="{{loading}}">
        <view class="loading">
          <text>加载中...</text>
        </view>
      </block>
      <block wx:elif="{{recentRecords.length === 0}}">
        <view class="empty">
          <text>暂无记录</text>
        </view>
      </block>
      <block wx:else>
        <view class="record-item" wx:for="{{recentRecords}}" wx:key="id">
          <view class="record-content">
            <view class="record-header">
              <text class="record-title">{{item.product.name}}</text>
              <text class="record-type" style="color: {{item.type === 'in' ? '#52c41a' : '#ff4d4f'}}">
                {{item.type === 'in' ? '入库' : '出库'}}
              </text>
            </view>
            <view class="record-info">
              <text>数量: {{item.quantity}} | 单价: ¥{{item.price}} | 总金额: ¥{{item.totalAmount}}</text>
            </view>
            <text class="record-date">{{item.date}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>