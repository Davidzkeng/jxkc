<view class="container">
  <view class="header">
    <text class="title">客户管理</text>
    <button class="add-btn" bindtap="navigateToAddCustomer">+ 添加客户</button>
  </view>
  
  <view class="content">
    <block wx:if="{{loading}}">
      <view class="loading">加载中...</view>
    </block>
    <block wx:else>
      <view class="customers-list">
        <view class="customer-item" wx:for="{{customers}}" wx:key="id">
          <view class="customer-info">
            <text class="customer-name">{{item.name}}</text>
            <text class="customer-contact">{{item.contactPerson}} | {{item.phone}}</text>
            <text class="customer-email">{{item.email || '无邮箱'}}</text>
            <text class="customer-address">{{item.address || '无地址'}}</text>
          </view>
          <view class="customer-actions">
            <button class="edit-btn" bindtap="navigateToEditCustomer" data-id="{{item.id}}">编辑</button>
            <button class="delete-btn" bindtap="deleteCustomer" data-id="{{item.id}}">删除</button>
          </view>
        </view>
      </view>
      <view class="empty" wx:if="{{customers.length === 0}}">
        <text>暂无客户数据</text>
      </view>
    </block>
  </view>
</view>