<view class="container">
  <view class="header">
    <text class="title">供应商管理</text>
    <button class="add-btn" bindtap="navigateToAddSupplier">+ 添加供应商</button>
  </view>
  
  <view class="content">
    <block wx:if="{{loading}}">
      <view class="loading">加载中...</view>
    </block>
    <block wx:else>
      <view class="suppliers-list">
        <view class="supplier-item" wx:for="{{suppliers}}" wx:key="id">
          <view class="supplier-info">
            <text class="supplier-name">{{item.name}}</text>
            <text class="supplier-contact">{{item.contactPerson}} | {{item.phone}}</text>
            <text class="supplier-email">{{item.email || '无邮箱'}}</text>
            <text class="supplier-address">{{item.address || '无地址'}}</text>
          </view>
          <view class="supplier-actions">
            <button class="edit-btn" bindtap="navigateToEditSupplier" data-id="{{item.id}}">编辑</button>
            <button class="delete-btn" bindtap="deleteSupplier" data-id="{{item.id}}">删除</button>
          </view>
        </view>
      </view>
      <view class="empty" wx:if="{{suppliers.length === 0}}">
        <text>暂无供应商数据</text>
      </view>
    </block>
  </view>
</view>