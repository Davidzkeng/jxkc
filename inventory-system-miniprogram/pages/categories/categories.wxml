<view class="container">
  <view class="header">
    <text class="title">分类管理</text>
    <button class="add-btn" bindtap="navigateToAddCategory">+ 添加分类</button>
  </view>
  
  <view class="content">
    <block wx:if="{{loading}}">
      <view class="loading">加载中...</view>
    </block>
    <block wx:else>
      <view class="categories-list">
        <view class="category-item" wx:for="{{categories}}" wx:key="id">
          <view class="category-info">
            <text class="category-name">{{item.name}}</text>
            <text class="category-description">{{item.description || '无描述'}}</text>
          </view>
          <view class="category-actions">
            <button class="edit-btn" bindtap="navigateToEditCategory" data-id="{{item.id}}">编辑</button>
            <button class="delete-btn" bindtap="deleteCategory" data-id="{{item.id}}">删除</button>
          </view>
        </view>
      </view>
      <view class="empty" wx:if="{{categories.length === 0}}">
        <text>暂无分类数据</text>
      </view>
    </block>
  </view>
</view>